<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AvaVNC"
             x:Class="AvaVNC.App"
             x:DataType="local:App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
             
     <!-- <Application.DataTemplates> -->
     <!--     <local:ViewLocator /> -->
     <!-- </Application.DataTemplates> -->
    <TrayIcon.Icons>
     <TrayIcons>
         <TrayIcon Icon="/Assets/Icon.ico" ToolTipText="AvaVNC.Core">
             <TrayIcon.Menu>
                 <NativeMenu>
                     <NativeMenuItem Header="_About" Command="{Binding AboutCommand}" />
                     <NativeMenuItemSeparator />
                     <NativeMenuItem Header="Q_uit" Command="{Binding QuitCommand}" />
                 </NativeMenu>
             </TrayIcon.Menu>
         </TrayIcon>
     </TrayIcons>
    </TrayIcon.Icons>
</Application>